@model IEnumerable<ClothingStore.Models.Section>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
   

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Title, "Index", item.Title)
        </td>
        <td>
            <img src="@item.ImageUrl" alt="@item.Title" width="500">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinkUrl)
        </td>
    </tr>
}

</table>
