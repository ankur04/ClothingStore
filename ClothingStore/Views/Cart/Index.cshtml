@model IEnumerable<ClothingStore.Models.Cart>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<button type="button" class="btn btn-primary" onclick="buy()" style="float: right">Buy Now</button>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Item Name
        </th>
        <th>
            Image
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.itemName)
        </td>
        <td>
            <img src="@item.itemImageUrl" alt="@item.itemName" height="350">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.itemPrice)
        </td>
        <td>
            @Html.ActionLink("Remove", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

<script>
    function buy() {
       
      var r = confirm("Do you want to buy now ?");
        if (r == true) {
          window.location.href = '@Url.Action("ClearCart", "Cart")'
      } else {
      }
       
    }
    
</script>