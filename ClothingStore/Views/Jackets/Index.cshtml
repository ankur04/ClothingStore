@model IEnumerable<ClothingStore.Models.Jackets>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div id="myElem" class="alert alert-success">
    <strong>Success!</strong> Added to cart.
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            <img src="@item.imageUrl" alt="@item.name" height="350">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            <span onclick="show()">@Html.ActionLink("Add to Cart", "AddToCart", "Cart", new { itemId = item.id, itemName = item.name,
                                itemImageUrl = item.imageUrl, itemPrice = item.price, from = "Jackets" }, null ) </span>
        </td>
    </tr>
}

</table>
<script>
    $("#myElem").hide();
    console.log("after hide");
    function show() {
        console.log("inside show");
        $("#myElem").show().delay(10000).fadeOut();
    }
    
</script>